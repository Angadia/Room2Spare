
<div class="box">
 <section>
<%= form_with model: @facility, local: true do |f| %>
  <% if @facility.errors.any? %>
   <ul>
    <% @facility.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end  %>
  </ul> 
  <% end %>
  <div>
       <%= f.text_field :name, placeholder: "name" %>
  </div>
  <div>
    <%= f.text_area :description, placeholder: "description" %>
  </div>
  <div>
   
    <%= f.text_field:address, placeholder: "address" %>
  </div>
  <div>
    <%= f.text_field :city, placeholder: "city" %>
  </div>
  <div>
    
    <%= f.text_field :contact_number, placeholder: "contact_number" %>
  </div>
  <div>
  
    <%= f.check_box :parking, placeholder: "parking" %>
  </div>
  <%= f.submit %>
<% end %>

</section>
</div>
