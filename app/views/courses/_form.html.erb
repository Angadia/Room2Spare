  <%= form_with(model: @course, local: true) do |form| %>
    <div>
      <% if @course.errors.present? %>
        <%= @course.errors.full_messages.join(', ') %>
      <% end %>
    </div>
    <div>
      <h3><%= form.label :title %></h3>
      <%= form.text_field :title, value: @course.title %>
    </div>
    <div>
      <h3><%= form.label :description %></h3>
      <%= form.text_area :description, cols: 50, rows: 5, value: @course.description %>
    </div>
    <div>
      <h3><%= form.label :status %></h3>
      <%= form.text_field :status, value: @course.status %>
    </div>
    <div>
      <h3><%= form.label :tuition %></h3>
      <%= form.text_field :tuition, value: @course.tuition %>
    </div>
    <div>
      <h3><%= form.label :capacity %></h3>
      <%= form.text_field :capacity, value: @course.capacity %>
    </div>    
    <div>
      <h3><%= form.label :image_url %></h3>
      <%= form.text_field :image_url, value: @course.image_url %>
    </div>    
    <%= form.submit %>
  <% end %>