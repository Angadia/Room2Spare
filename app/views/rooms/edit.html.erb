<h1>Edit Room</h1>

<%= form_with model: @rooms, local: true do |f| %>

  <% if @room.errors.any? %>
   <ul>
    <% @room.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end  %>
  </ul> 
  <% end %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :capacity %>
    <%= f.text_field :capacity %>
  </div>
  <div>
    <%= f.label :area %>
    <%= f.text_field :area %>
  </div>
  <div>
    <%= f.label :whiteboard %>
    <%= f.check_box :whiteboard %>
  </div>
  <div>
    <%= f.label :internet %>
    <%= f.check_box :internet %>
  </div>
   <div>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </div>
  <div>
    <%= f.label :one_hour_rental_price %>
    <%= f.number_field :one_hour_rental_price %>
  </div>
  <%= f.submit %>
<% end %>