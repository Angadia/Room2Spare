<h1>Update you user details</h1>

<%=form_with model: @user, local: true do |f| %>
<% if @user.errors.any? %> 
  <p>
    <%= @user.errors.full_messages.join(', ') %>
  </p>
<%end %>
<div>
    <p>Status: <%= user_type(@user) %></p> 
</div>
<div>
    <%= f.label      :first_name %>
    <%= f.text_field :first_name %>
</div>
<div>
   <%= f.label      :last_name %>
   <%= f.text_field :last_name %>
</div>
<div>
   <%= f.label       :email %>
   <%= f.email_field :email %>
</div>
<div>
    <%= f.label         :contact_number %>
    <%= telephone_field :user, :contact_number %>
 </div>

<%= f.submit %>
 
<% end %>